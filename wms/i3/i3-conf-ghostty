set $mod Mod4
set $term ghostty
set $screenshot_script_path ~/.config/scripts/screenshot
set $rezise_pixel_gap 5

focus_follows_mouse no

bindsym $mod+d exec dmenu_run
bindsym $mod+Return exec $term

bindsym $mod+q kill
bindsym $mod+f fullscreen toggle

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+space floating toggle
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exit

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split


bindsym Print exec --no-startup-id $screenshot_script_path full
bindsym $mod+Shift+s exec --no-startup-id $screenshot_script_path select


bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5

bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right


bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+r mode "resize"

mode "resize" {
        bindsym h   resize shrink width $rezise_pixel_gap px or $rezise_pixel_gap ppt
        bindsym k   resize grow height $rezise_pixel_gap px or $rezise_pixel_gap ppt
        bindsym j   resize shrink height $rezise_pixel_gap px or $rezise_pixel_gap ppt
        bindsym l   resize grow width $rezise_pixel_gap px or $rezise_pixel_gap ppt

        bindsym Left   resize shrink width $rezise_pixel_gap px or $rezise_pixel_gap ppt
        bindsym Down   resize grow height $rezise_pixel_gap px or $rezise_pixel_gap ppt
        bindsym Up   resize shrink height $rezise_pixel_gap px or $rezise_pixel_gap ppt
        bindsym Right   resize grow width $rezise_pixel_gap px or $rezise_pixel_gap ppt        

        bindsym Escape mode "default"
}

floating_modifier $mod


exec --no-startup-id xrandr --output DP-0 --primary --mode 2560x1440 --rate 180

bar {
    position bottom
    status_command i3status-rs ~/.config/i3status-rust/config-etm.toml
}
